<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt" style="color:#180874;"></i></h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Introduza um email"
            list="users_list"
          />
        </div>
        <div class="form-group">
          <label for="password">Senha</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Introduza a senha"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
      </form>
      <p class="lead mt-4">
        NÃ£o tem uma conta? <a href="/users/register">Registar</a>
      </p>
    </div>

    <!-- Criar uma lista de ulizadores existentes -->
    <datalist id="users_list">
      <% user.forEach(function(list) { %>
        <option value="<%= list.email %>" >
      <% }); %>
    </datalist>
  </div>
</div>